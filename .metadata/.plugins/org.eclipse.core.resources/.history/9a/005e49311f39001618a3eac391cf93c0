package com.hrlolli.launchpad;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.boot.orm.jpa.EntityScan;
import org.springframework.context.annotation.ComponentScan;
import org.springframework.data.jpa.repository.config.EnableJpaRepositories;

@SpringBootApplication(exclude={HibernateJpaAutoConfiguration.class})
@ComponentScan("com.hrlolli")
@EnableJpaRepositories(basePackages = "com.hrlolli.repositories")
@EntityScan(basePackages = { "com.hrlolli.entities" })
public class HrlolliApplication {

	public static void main(String args[]) {
		SpringApplication.run(HrlolliApplication.class, args);
	}
	
}
